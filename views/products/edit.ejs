<% layout('layouts/boilerplate')%>
<%- include('../partials/navbar')%>
    
<div class="row">
    <div class="col-6 mx-auto">
        <form action = "/products/<%=foundProduct._id%>?_method=PATCH" method = "POST">
            <div class = "mb-3">
                <label for="naam">Name: </label>
                <input type="text" class="form-control" name="name" id="naam" placeholder="Name of the product" value = "<%=foundProduct.name%>" required>
            </div>
            <div class = "mb-3">
                <label for="img">Img: </label>
                <input type="text" class="form-control" name="img" id="img" placeholder="Image URL of the product" value = "<%=foundProduct.img%>" required>
                
            </div>

            <div class = "mb-3">
                <label for="paisa">Price: </label>
                <input type="number" class="form-control" name="price" id="paisa" placeholder="Price of the product" value = "<%=foundProduct.price%>" required>
            </div>
            <div class = "mb-3">
                <label for="desc">Desc: </label>
                <textarea name="desc" id="desc" rows="5" placeholder="Description of the product" required><%=foundProduct.desc%></textarea>
            </div>
            <button class="btn btn-sm btn-sucess" type="submit" style="background-color: red">edit Product</button>
        </form>
    </div>
</div>


    
</body>
</html>